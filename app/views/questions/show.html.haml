.jumbotron
  %h1= @question.title
  - if session[:has_voted]
    %p vote count: #{@question.vote_count}
  - else
    = button_to "Vote Up", vote_up_question_path(@question), class: "btn btn-default"
  %p= @question.description
  %p= formatted_date(@question.created_at)

  %p
    = link_to "edit", edit_question_path
    = |
    = link_to "delete", @question, method: :delete, data: {confirm: "Are you sure you want to delete this?" }
  %h2 Add an Answer
  - if @answer.errors.any?
    %ul
      - @answer.errors.full_messages.each do |message|
        %li message

  = form_for @answer, url: question_answers_path(@question) do |f|
    = f.text_area :body, class: "form-control"
    = f.submit class: "btn btn-default"

%hr
- @question.answers.each_with_index do |answer, i|
  .well.col-sm-3
    %h3 Answer #{i + 1}
    %p= answer.body
    %p= formatted_date(answer.created_at)
